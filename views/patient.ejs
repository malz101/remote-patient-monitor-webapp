<!doctype html>
<html lang="en">

	<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title><%=id%> | Patient Monitoring System</title>
        <script type="text/javascript" src="javascripts/Chart.bundle.min.js"></script>
		<link href="stylesheets/monitorsystem.css" rel="stylesheet" type="text/css">
	</head>

	<body>
        <section>
            <div class="content">
                <table class="picTable">
                    <tr>
                        <td>
                            <img src="images/mary.jpg" alt="profile picture" width="200" height="200"></img>
                        </td>

                        <td>
                            <table id="patientInformation" class="pI" >
                                <tbody>
                                    <tr valign="top">
                                        <td class="pID"><strong>Name:</strong> <%=fname%> <%=lname%></td>
                                        <td class="pID"><strong>Home Phone:</strong> <%=home%></td>
                                    </tr>
                                    <tr valign="top">
                                        <td class="pID"><strong>Address: </strong><%=address[0]%>, <%=address[1]%><br>
                                            <%=address[2]%>, <%=address[3]%></td>
                                        <td class="pID"><strong>Cell Phone:</strong></td>
                                    </tr>
                                    <tr valign="top">
                                        <td class="pID"><strong>Patient ID:</strong> <%=id%></td>
                                        <td class="pID"><strong>Fax:</strong></td>
                                    </tr>
                                    <tr valign="top">
                                        <td class="pID"><strong>Birth Date</strong>: <%=dob%></td>
                                        <td class="pID"><strong>Status: </strong><%=staus%></td>
                                    </tr>
                                    <tr valign="top">
                                        <td class="pID"><strong>Gender:</strong> <%=gender%></td>
                                        <td class="pID"><strong>Marital Status:</strong> <%=rstatus%></td>
                                    </tr>
                                    <tr valign="top">
                                        <td class="pID"><strong>Referred by:</strong></td>
                                        <td class="pID"><strong>Emp. Status:</strong> <%=estatus%></td>
                                    </tr>
                                    <tr valign="top">
                                        <td class="pID"><strong>Email:</strong> <%=email%></td>
                                        <td class="pID"><strong>Sens Chart:</strong> No</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="content">
                <h4 class="problems">Problems</h4>

                <p class="problems"><%=problems[0]%><br>
                    <%=problems[1]%>
                </p>

                <h4 class="problems">Medications</h4>

                <p class="problems"><%=medications[0]%><br>
                    <%=medications[1]%><br>
                    <%=medications[2]%>
                </p>
            </div>
        </section>

        <section>
            <div class="content">
                <hr size="6">
                <h4 class="alertArea" id="errorArea">
                </h4>
            </div>
        </section>

        <section>
            <div class="content">
                <h3 class="tableTitle">
                    PATIENT'S VITALS
                </h3>
                <table class="tableVitals">
                    <tr>
                        <td class="label">Heart rate: </td>
                        <td class="vitals" id="bpm"></td>
                    </tr>
                    <tr>
                        <td class="label">Temperature: </td>
                        <td class="vitals" id="temp"></td>
                    </tr>
                    <tr>
                        <td class="label">Position on Bed: </td>
                        <td class="vitals" id="pos"></td>
                    </tr>
                    <tr>
                        <td class="label">Accleration: </td>
                        <td class="vitals" id="accl"></td>
                    </tr>
                </table>  
                <br>
                <br>
            </div>
        </section>

        <section>
            <div class="content">
                <canvas id="bpmCanvas" class="patientChart"></canvas>
                <br>
                <br>
            </div>
    
            <div class="content">
                <canvas id="hrCanvas" class="patientChart"></canvas>
                <br>
                <br>
            </div>
    
            <div class="content">
                <canvas id="acclCanvas" class="patientChart"></canvas>
                <br>
                <br>
            </div>   
        </section>

        <div class="content tableButton">
            <button id="table-button" type="button">Show Table</button>
        </div>
        
        <section id="tableSection" class="tableSection">
            <div class="content">
                <hr size="6">

                <h3 class="tableTitle">
                    TABLE SHOWING PATIENT'S VITALS
                </h3>
                <table id="patientTable" class="table">
                    <thead>
                        <tr class = "tableHeadings">
                            <th class="tableHeading">ID #</th>  
                            <th class="tableHeading">Heart Rate (bpm)</th>
                            <th class="tableHeading">Temperature (Â°C)</th>
                            <th class="tableHeading">Postition</th>
                            <th class="tableHeading">Accleration (m/s)</th>
                            <th class="tableHeading">Alert</th>
                            <th class="tableHeading">Time</th>
                            <!--<th class="tableHeading">Date</th>-->
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <!--<td></td> -->
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

        <script type="text/javascript" src="javascripts/appProject.js"></script>
	</body>
</html>
